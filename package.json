{
  "name": "build.sh",
  "version": "0.2.4",
  "description": "ðŸ”¨ run and visualize the build process",
  "repository": {
    "type": "https",
    "url": "https://github.com/gabrielcsapo/build.sh.git"
  },
  "bugs": {
    "url": "https://github.com/gabrielcsapo/build.sh/issues"
  },
  "homepage": "https://github.com/gabrielcsapo/build.sh#readme",
  "main": "index.js",
  "scripts": {
    "lint": "eslint .",
    "test": "tape test/**.js",
    "coverage": "tap test --coverage --coverage-report=lcov --no-browser",
    "generate-docs": "jsdoc -c jsdoc.json",
    "pack": "pkg bin/build.js -c package.json -o packed/build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o ./docs/storybook"
  },
  "bin": {
    "build": "./bin/build.js"
  },
  "author": "Gabriel J. Csapo <gabecsapo@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "async": "^2.5.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "commander": "^2.11.0",
    "css-loader": "^0.28.7",
    "html-webpack-inline-source-plugin": "0.0.9",
    "html-webpack-plugin": "^2.30.1",
    "js-yaml": "^3.10.0",
    "log-update": "^2.1.0",
    "opn": "^5.1.0",
    "prop-types": "^15.5.10",
    "psychic-ui": "^1.0.8",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "shelljs": "^0.7.8",
    "style-loader": "^0.18.2",
    "webpack": "^3.6.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.6",
    "@storybook/react": "^3.2.8",
    "docdash": "^0.4.0",
    "eslint": "^4.7.0",
    "eslint-plugin-react": "^7.3.0",
    "jsdoc": "^3.5.5",
    "pkg": "^4.2.4",
    "tap": "^10.7.1",
    "tape": "^4.8.0"
  },
  "pkg": {
    "scripts": [
      "bin/*",
      "util/**/*"
    ],
    "assets": [
      "src/**/*",
      "node_modules/psychic-ui/dist/psychic-min.css"
    ],
    "targets": [
      "node8-macos-x64",
      "node8-alpine-x64",
      "node8-linux-x64",
      "node8-win-x64"
    ]
  }
}
